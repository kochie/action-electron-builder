{
  "name": "action-electron-builder",
  "version": "1.8.0",
  "description": "GitHub Action for building and releasing Electron apps",
  "author": {
    "name": "Samuel Meuli",
    "email": "me@samuelmeuli.com",
    "url": "https://samuelmeuli.com"
  },
  "repository": "github:samuelmeuli/action-electron-builder",
